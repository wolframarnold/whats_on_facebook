      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Religion'} Religion
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Politics'} Politics
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Love'} Love
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Drug'} Drug
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Drink'} Drink
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Animal'} Animal
