      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Vent'} Vent
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Music'} Music
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Dance'} Dance
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Art'} Art
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Frustration'} Frustration
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Sex'} Sex
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Work'} Work
