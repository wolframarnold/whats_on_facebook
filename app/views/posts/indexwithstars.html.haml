.row-fluid.post
  .span4
  .span4
    .well
      %h2
        = @post.body

.row-fluid.rating-widget
  .span4
  .span1
    %h3 Peaceful
  .span2
    %span.rating
      %span.star{'data-rating' => 5, 'data-type'=>'violence', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 4, 'data-type'=>'violence', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 3, 'data-type'=>'violence', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 2, 'data-type'=>'violence', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 1, 'data-type'=>'violence', 'data-id' => @post.to_param}
  .span1
    %h3 Violent

.row-fluid.rating-widget
  .span4
  .span1
    %h3 Positive
  .span2
    %span.rating
      %span.star{'data-rating' => 5, 'data-type'=>'sentiment', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 4, 'data-type'=>'sentiment', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 3, 'data-type'=>'sentiment', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 2, 'data-type'=>'sentiment', 'data-id' => @post.to_param}
      %span.star{'data-rating' => 1, 'data-type'=>'sentiment', 'data-id' => @post.to_param}
  .span1
    %h3 Negative

.row-fluid.button
  .span3
  .span1
    %h3 Tags:
  .span4
    %span.tagging
      %span.tag{'data-id' => @post.to_param, 'data-tag'=>'Sports'} Sports
